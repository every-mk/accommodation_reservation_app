<div class="container room-show">
  <div class="row">
    <div class="room-area">
      <%= image_tag "/uploads/room/image/#{@room.id}/#{@room.image_name}", alt: "部屋画像", class: "room-show-image" %>
      <div class="room-show-detile">
        <div class="room-show-detile-icon">
          <%= link_to image_tag("/uploads/room/image/#{@room.user.id}/#{@room.user.profile.image_name}", class: "host-icon"), root_path, data: {"turbolinks" => false} %>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.name %></p>
          <p class="room-show-profile-address"><%= @room.address %></p>
        </div>
      </div>
      <p class="room-show-detile-introduce"><%= @room.introduce %></p>
    </div>
    <div class="reservation-area">
      <div class="room-show-nav">
        <p class="price-icon"><%= "#{@room.price} / 日" %></p>
        <div class="room-show-date-select">
          <%= form_with url: new_reservation_path, method: :get, scope: :reservation do |f| %>
            <%= f.label "開始日" %>
            <%= f.date_field :start_date, value: @reservation.start_date, class: "form-control" %>
            <%= f.label "終了日" %>
            <%= f.date_field :end_date, value: @reservation.end_date, class: "form-control" %>
            <%= f.label "人数" %>
            <%= f.number_field :peoples, min: 1, value: @reservation.peoples, class: "form-control" %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.submit "予約する", class: "btn btn-primary form-control" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
