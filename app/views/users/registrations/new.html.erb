<div class="container device">
  <div class="device-frame">
    <p>新しいアカウントを作成</p>
    <div class="device-inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %> 

        <div class="field">
          <div class="required"></div>
          <% if resource.profile.presence %>
            <%= text_field :profile, :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名", class: "form-control",value: resource.profile.name %>
          <% else %>
            <%= text_field :profile, :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名", class: "form-control" %>
          <% end %>
        </div> 

        <div class="field">
          <div class="required"></div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
        </div>

        <div class="field">
          <div class="required"></div>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control" %>
        </div>

        <div class="field">
          <div class="required"></div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "新しいアカウントを作成", class: "form-control btn-primary" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
